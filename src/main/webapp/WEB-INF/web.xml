<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5" >


    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>Signin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Addblog</servlet-name>
        <servlet-class>Addblog</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Addblog</servlet-name>
        <url-pattern>/addblog</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Showblog</servlet-name>
        <servlet-class>ShowBlog</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Showblog</servlet-name>
        <url-pattern>/showblog</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Home.jsp</welcome-file>
    </welcome-file-list>

</web-app>